{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://api.trollskogen.nu/update.race.schema.json",
  "title": "Race",
  "type": "object",
  "required": [
    "id",
    "name",
    "spawn_world",
    "spawn_x",
    "spawn_y",
    "spawn_z",
    "spawn_pitch",
    "spawn_yaw",
    "is_enabled",
    "is_editing",
    "type"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "name": {
      "type": "string",
      "pattern": "^\\S{6,20}$",
      "minLength": 1
    },
    "spawn_world": {
      "type": "string",
      "minLength": 1
    },
    "spawn_x": {
      "type": "integer"
    },
    "spawn_y": {
      "type": "integer"
    },
    "spawn_z": {
      "type": "integer"
    },
    "spawn_pitch": {
      "type": "number"
    },
    "spawn_yaw": {
      "type": "number"
    },
    "is_enabled": {
      "type": "boolean"
    },
    "is_editing": {
      "type": "boolean"
    },
    "type": {
      "type": "string",
      "enum": [
        "player",
        "horse",
        "elytra",
        "pig"
      ]
    }
  }
}